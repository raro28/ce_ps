<a href="#" id="togglePrint">Imprimible</a>
<div id="accordion">
    <h3>Informacion sobre los datos</h3>
    <div>
        @Html.Action("DataSummary")
    </div>
    <h3>Medidas de tendencia central</h3>
    <div>
        @Html.Action("CentralTendencySummary")
    </div>   
    <h3>Medidas de dispersion</h3>
    <div>
        @Html.Action("DispersionSummary")
    </div> 
    @if(ViewBag.Type == "grouped"){
    @Html.Action("GroupedReport")   
    } 
    <h3 id="xileHeader">Deciles, Percentiles, Cuartiles</h3>   
    <div>
        @Html.Action("XileCalculator")
    </div>
</div>
<script type="text/javascript">
$(function() {
    $( "#accordion" ).accordion({
        heightStyle: "content"
    });
    $( "#togglePrint" ).click(function (){
        $( "#accordion" ).accordion("destroy");
        $("#header").hide();
        $("#navigation").hide();
        $("#footer").hide();
        $("#xileHeader").next().hide();   
        $("#xileHeader").hide();  
        $( "#togglePrint" ).remove();
    });
});
</script>